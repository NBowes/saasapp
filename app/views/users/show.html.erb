<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <%= image_tag @user.profile.avatar %>
    </div>
    <div class='col-md-6'>
        <h1>
          <%= @user.profile.first_name %>
          <%= @user.profile.last_name %>
        </h1>
        <h3><%= @user.profile.job_title %> </h3>
        <div class='well'>
          <%= @user.profile.description %>
        </div>
        <div class='well'>
          <%= @user.profile.phone_number %></br>
          <%= @user.profile.contact_email %>
        </div>
      </div>
    </div>
  </div>
</div>
