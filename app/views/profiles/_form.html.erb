<%= form_for @profile, url: new_user_profile_path do |f| %>
  <div class='form-field'>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, class:'form-control' %>
  </div>
  <div class='form-field'>
    <%= f.label :last_name %>
    <%= f.text_field :last_name, class:'form-control' %>
  </div>
  <div class='form-field'>
    <%= f.label :job_title %>
    <%= f.select :job_title, ['Developer', 'Entrepreneur', 'Other'], {},class:'form-control' %>
    <!-- Add in condition field when other is chose
    <%= f.text_field :job_title if @profile.job_title === 'Other' %> -->
  </div>
  <div class='form-field'>
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number, class:'form-control' %>
  </div>
  <div class='form-field'>
    <%= f.label :contact_email %>
    <%= f.text_field :contact_email, class:'form-control' %>
  </div>
  <div class='form-field'>
    <%= f.label :description %>
    <%= f.text_area :description, class:'form-control' %>
  </div>
  </div>
  <% end %>
